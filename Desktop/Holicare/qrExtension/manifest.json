{
    "manifest_version":3,
    "name":"shareqrcode",
    "description":"Generate a qrcode to share this webpage with your friends",
    "version":"1.0",
    "action":{
        "default_popup":"qrcode.html",
        "default_icon":"qrcode.svg"
    },
    "background.service_worker":{
        "scripts": ["./script.js"]
     },
     "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://cdn.tailwindcss.com;"
    }
}